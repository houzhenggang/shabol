.header{
    height:224rpx;
    overflow: hidden;
    text-align: center;
    background: #fff;
}
.distance{
    position: relative;
    margin-top:41rpx;
    min-height: 96rpx;
}
.distance .start,.distance .end{
    position: absolute;
    top:0;
    width: 280rpx;
}
.distance .start{
    left:10rpx;
}
.distance .end{
    right:10rpx;
}

.distance .city{
    display:block;
    font-size: 48rpx;
    line-height: 48rpx;
}
.distance .province{
    margin-top: 21rpx;
    font-size: 32rpx;
    line-height: 32rpx;
    color:rgba(0,0,0,.8);
    display: block;
}

