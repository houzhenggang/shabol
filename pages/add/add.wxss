@import "../../components/loading/loading.wxss";
.wrapper{
  overflow: hidden;
}
.section{
    margin-top:20rpx;
    padding-left:30rpx;
    background:#fff;
}
.section-second{
  margin-top:40rpx;
}
.section .item{
    position:relative;
    padding-left:154rpx;
    min-height:88rpx;
    border-bottom:1px solid #eee;
}
.section .item:last-of-type{
    border:0 none
}
.section textarea{
    padding:16rpx 10rpx 10rpx 0;
    min-height:150rpx;
    width:95%;
    word-break: break-all;
}
.section .caption{
    position:absolute;
    left:0;
    top:0;
    height:34rpx;
    line-height:34rpx;
    color:#000;
    padding:27rpx 0;
}
.select{
    position: relative;
    line-height:88rpx;
}
.select:after{
    position: absolute;
	content: "";
    top: 50%;
    right: 30rpx;
    width: 12rpx;
    height: 12rpx;
    border-top: 1rpx solid #999;
    border-right: 1rpx solid #999;
    transform:translate(0,-50%) rotate(45deg);
}
.startText,.endText{
  width: 90%;
  overflow: hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
input{
    height:88rpx;
    line-height:88rpx;
    min-height:0;
    font-size:34rpx;
}
.submit{
    margin:20rpx 30rpx 30rpx;
    font-size:32rpx;
    letter-spacing: 10rpx;
    margin-top: 100rpx;
}


/*选择地区*/
.selectTheCity,.selectTheCar{
  position: fixed;
  top: 200rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  z-index: 300
}
.backSelectCity{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  z-index: 250
}
.selectNow{
  font-size: 26rpx;
  padding-top: 20rpx;
  padding-left: 10rpx;
  padding-bottom: 20rpx;
}
.backFront{
  position: fixed;
  color: #508BFF;
  font-size:36rpx;
  right: 0;
  top: 200rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
}
.selectTheCar .backCarSelect{
  position: absolute;
  bottom: 60rpx;
  width: 80%;
  left: 50%;
  transform: translate(-50%);
  background: #0066c0;
  color: #fff;
}
.content{
  height: 100%;
  padding: 20rpx;
}
.theSelectedText{
  color: #0066c0;
  font-size: 36rpx;
}
.content-car{
  display: flex;
}
.content-selectedCars{
  flex: row
}
.selectCity,.selectCar{
  float:left;
  width:171rpx;
  border:1rpx solid #eee;
  height:80rpx;
  text-align:center;
  line-height:80rpx;
  overflow: hidden;
  white-space:nowrap;
  text-overflow: ellipsis;
}
.selectedCar{
  background:#0066c0;
  color: #fff;
}
.all{
  background: #eee
}

