<import src="../../components/loading/loading.wxml"/>
<import src="../../components/share/share.wxml"/>
<template is="loading" data="{{loading}}"/>
<template is="share" data="{{shareHidden}}" wx:if="{{uid === mineUID}}"/>
<view class="wrapper">
	<view class="share-list" wx:if="{{list.length}}">
		<navigator wx:for="{{list}}" class="item" url="../detail/detail?id={{item.id}}&uid={{uid}}&nickname={{nickname}}"  open-type="navigate">
			<!-- <view class="region" wx:if="{{item.FromCityName.length < 4}}">
				<text class="city">{{item.FromCityName}}</text>
	      <text class="province">{{item.FromAeraName == '0' ? item.FromProName : item.FromAeraName}}</text>
			</view>
			<view class="region start" wx:else>
				{{item.FromCityName}}.{{item.FromAeraName == '0' ? item.FromProName : item.FromAeraName}}
			</view> -->
			<view class="region start">
				{{item.FromCityName}}{{item.FromAeraName == '0' ? '' : item.FromAeraName}}
			</view>
			<view class="category" wx:if="{{item.truckLength == '不限车长' && item.ProductId == '不限车型'}}">不限</view>
			<view class="category" wx:else>{{item.truckLength}}{{item.ProductId}}</view>

			<!-- <view class="region endTxt" wx:if="{{item.ToCityName.length < 4}}">
				<text class="city">{{item.ToCityName}}</text>
	      <text class="province">{{item.ToAeraName == '0' ? item.ToProName : item.ToAeraName}}</text>
			</view>
			<view class="region end endTxt" wx:else>
				{{item.ToCityName}}.{{item.ToAeraName == '0' ? item.ToProName : item.ToAeraName}}
			</view> -->
			<view class="region end endTxt">
				{{item.ToCityName}}{{item.ToAeraName == '0' ? '' : item.ToAeraName}}
			</view>
		</navigator>
	</view>
	<view class="loading-more" wx:if="{{list.length && list.length > 19}}">{{loadingText}}</view>
	<!-- <view class="footer">
		<button size="default" bindtap="toAdd">我也要使用微信小程序发货</button>
	</view> -->
	<view class="toAddList" bindtap="toAdd" wx:if="{{uid !== mineUID && list.length > 6}}"><image class="toAddIcon" src="../../images/add-selected.png" />我也要使用微信小程序发货</view>
	<view class="toAddListLast" bindtap="toAdd" wx:if="{{uid !== mineUID && list.length <= 6}}"><image class="toAddIcon" src="../../images/add-selected.png" />我也要使用微信小程序发货</view>
</view>




<!-- <navigator class="to-add" url="../add/add" open-type="switchTab"><text class="to-add-text">我也要发货</text></navigator> -->

<view class="tab-bar">
	<image class="avatar" src="{{avatar}}" />
	<view class="nickname">{{editName !== '' ? editName : nickname}}</view>
	<!-- <view class="total">已有{{total}}人关注</view> -->
	<!-- <view class="{{followStatus}}" bindtap="follow">{{followText}}</view> -->
	<view class="call" bindtap="makePhoneCall">拨打电话</view>
</view>
