@import "../../components/loading/loading.wxss";
@import "../../components/share/share.wxss";
.item{
    padding:0 30rpx;
    height:100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #E5E5E5;
    display: flex;
    font-size: 28rpx;
    background: #fff;
}
.region{
    flex:1
}
.city,.province{
  display: inline-block;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.city{
    font-size: 36rpx;
    width:136rpx;
}
.province{
    margin-left: 10rpx;
    color:#999
}
.end{
    text-align: right;
}
.category{
    color:#8FAACC
}
.category:before,.category:after{
    width:20rpx;
    height:20rpx;
    font-size: 0;
    content:"";
    display: inline-block;
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 21 21' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M.294 20.337a.997.997 0 0 0 1.41.005l8.614-8.615c.78-.78.78-2.042 0-2.822L1.703.291a.994.994 0 0 0-1.41.004.998.998 0 0 0 .001 1.415l7.899 7.898a.999.999 0 0 1 0 1.416L.294 18.922a.998.998 0 0 0 0 1.415zm10 0a.997.997 0 0 0 1.41.005l8.614-8.615c.78-.78.78-2.042 0-2.822L11.703.291a.994.994 0 0 0-1.41.004.998.998 0 0 0 .001 1.415l7.899 7.898a.999.999 0 0 1 0 1.416l-7.899 7.898a.998.998 0 0 0 0 1.415z' fill='#E2E9F0' /%3E%3C/svg%3E")
}
.category:before{
    margin-right: 10rpx;
}
.category:after{
    margin-left:10rpx;
}

.phone{
    position: fixed;
    left:0;
    bottom:0;
    padding:0 20px;
    width: 100%;
    height:100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
    color:#fff;
    background: #1AAD19
}
.phone:after{
    position:absolute;
    right:20px;
    top:50%;
    content:"";
    width:80rpx;
    height:80rpx;
    border-radius: 50%;
    transform: translate(0,-50%);
    background:url("https://s.kcimg.cn/app/images/matching/phone_new.png") no-repeat 50% 50%;
    background-size: 34rpx 32rpx;
}
.to-add{
    position: fixed;
    bottom:160rpx;
    right:30rpx;
    width: 100rpx;
    height:100rpx;
    border-radius: 50%;
    background-color: #508BFF;
    box-shadow: 0 2rpx 4rpx 0 rgba(80,139,255,.4);
    z-index: 200
}
.to-add-text{
  position: absolute;
  width: 80rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: center;
  color:#fff;
  margin-top: 20rpx;
  margin-left: 10rpx;
  z-index: 200
}
