.tab-bar{
    position: fixed;
    bottom:0;
    left:0;
    padding:0 200rpx 0 150rpx;
    width:100%;
    height:98rpx;
    box-sizing: border-box;
    border-top:1rpx solid #b2b2b2;
    background: #F8F8FA
}
.avatar{
    position: absolute;
    left:30rpx;
    top:-15rpx;
    width:100rpx;
    height:100rpx;
    border-radius: 50%;
    border:1rpx solid #fff;
    box-shadow: 0 1rpx 4rpx 0 rgba(0,0,0,.2);
}
.nickname{
    margin:32rpx 0 16rpx;
    font-size: 32rpx;
    line-height: 32rpx;
}
.call{
    position: absolute;
    right:0;
    top:-1rpx;
    width:270rpx;
    height:99rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    color:#fff;
    text-align: center;
    background: #09BB07;
}
.call:before{
    margin:14rpx auto 10rpx;
    content:"";
    width:32rpx;
    height:32rpx;
    font-size: 0;
    display:block;
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10.856 13.285c.073.15 1.644 2.815 2.606 3.905 1.636 1.854 4.92 3.635 4.92 3.635l1.905-1.908a1.841 1.841 0 0 1 1.725-.491l7.376 1.738c.416.114.907.352 1.386.79.784.718 1.244 1.751 1.225 3.013 0 0-.314 3.118-1.656 4.773-.943 1.162-4.1 2.9-4.168 2.92C15.895 34.654-2.015 17.215.185 5.849c.022-.113.91-2.018 1.734-3.007C3.556.878 5.709-.254 8.33.05c0 0 1.073-.028 1.831.53.616.453 1.065 1.131 1.342 1.999l2.1 6.58a1.84 1.84 0 0 1-.451 1.86s-2.408 2.038-2.296 2.267z' fill='#FFF' /%3E%3C/svg%3E")
}
.wrapper{
  padding-bottom:110rpx;
}
.loading-more{
    height:100rpx;
    line-height: 100rpx;
    text-align: center;
    color:#999;
}
.toAddList{
  position: relative;
  margin-top: 30rpx;
  text-align: center;
  font-size: 32rpx;
  height: 100rpx;
  line-height: 120rpx;
  color: #09BB07;
  /*padding-bottom: 90rpx;*/
}
.toAddIcon{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  color: #09BB07;
  left: 50%;
  top: -15rpx;
  margin-left: -30rpx;
}
.footer{
  padding: 30rpx 120rpx;
}
.footer button{
  background-color: #10AEFF;
  color:#fff;
  line-height: 2.0
}
